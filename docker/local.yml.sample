version: '3'
services:
  app:
    environment:
      WORDPRESS_DB_USER: user
      WORDPRESS_DB_PASSWORD: password
      WORDPRESS_DB_NAME: dbname
      WORDPRESS_TABLE_PREFIX: dbprefix_
      WORDPRESS_DEBUG: 0
    ports:
      - 8080:80
  mariadb:
    ports:
      - 3306:3306
    environment:
      MYSQL_USER: user
      MYSQL_PASSWORD: password
      MYSQL_DATABASE: dbname
    volumes:
      - mysqldata:/var/lib/mysql
volumes:
  mysqldata:
    driver: local